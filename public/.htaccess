# .htaccess para React SPA - RadReport
# Configuração otimizada para Hostinger

# Habilitar rewrite engine
RewriteEngine On

# Configurações de segurança básicas
Header set X-Content-Type-Options "nosniff"
Header set X-Frame-Options "DENY"
Header set X-XSS-Protection "1; mode=block"

# Compressão GZIP
<IfModule mod_deflate.c>
    # Compressão de textos
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/ld+json
    
    # Remover headers de compressão para browsers antigos
    BrowserMatch ^Mozilla/4 gzip-only-text/html
    BrowserMatch ^Mozilla/4\.0[678] no-gzip
    BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
    Header append Vary User-Agent
</IfModule>

# Cache de arquivos estáticos
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Imagens
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS e JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    
    # Fontes
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    
    # JSON e dados
    ExpiresByType application/json "access plus 1 hour"
    ExpiresByType application/ld+json "access plus 1 hour"
    
    # HTML principal (não cachear)
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Configuração de SPA React - IMPORTANTE!
# Redirecionar todas as requisições para index.html (exceto arquivos existentes)

# Se o arquivo ou diretório existir, usar diretamente
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Se não existir, redirecionar para index.html (SPA)
RewriteRule ^ index.html [L]

# Tratamento de erros personalizados
ErrorDocument 404 /index.html
ErrorDocument 403 /index.html

# Configurações de CORS para APIs
<IfModule mod_headers.c>
    # Permitir CORS para APIs (ajuste conforme necessário)
    SetEnvIf Origin "http(s)?://(www\.)?(radreport\.com\.br|localhost:5173)$" AccessControlAllowOrigin=$0
    Header set Access-Control-Allow-Origin %{AccessControlAllowOrigin}e env=AccessControlAllowOrigin
    Header set Access-Control-Allow-Credentials "true"
    Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization"
    
    # Handle preflight requests
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^ - [R=204,L]
</IfModule>

# Proteção contra acesso direto a arquivos sensíveis
<FilesMatch "\.(env|json|lock|md|yml|yaml)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order deny,allow
        Deny from all
    </IfModule>
</FilesMatch>

# Proteger arquivos de configuração específicos
<Files "package.json">
    Require all denied
</Files>

<Files "package-lock.json">
    Require all denied
</Files>

<Files "version.json">
    Require all denied
</Files>

# Permitir acesso ao health check
<Files "health.json">
    Require all granted
</Files>

# Configurações de performance
# Desativar ETags
FileETag None

# Reduzir overhead de TCP
<IfModule mod_headers.c>
    Header set Connection keep-alive
</IfModule>

# Configuração específica para React Router
# Garantir que todas as rotas SPA funcionem
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Rotas específicas do RadReport
    RewriteRule ^login/?$ index.html [L]
    RewriteRule ^signup/?$ index.html [L]
    RewriteRule ^dashboard/?$ index.html [L]
    RewriteRule ^editor/?$ index.html [L]
    RewriteRule ^settings/?$ index.html [L]
    RewriteRule ^auth/callback/?$ index.html [L]
    
    # Qualquer outra rota que não seja arquivo existente
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} !^/assets/
    RewriteCond %{REQUEST_URI} !^/api/
    RewriteRule ^ index.html [L]
</IfModule>

# Logs de erro personalizados (descomente se necessário)
# php_flag display_errors off
# php_flag log_errors on
# php_value error_log /home/logs/error_log

# Fim do arquivo .htaccess